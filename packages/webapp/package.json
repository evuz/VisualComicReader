{
  "name": "@vcr/webapp",
  "version": "0.1.0",
  "homepage": ".",
  "private": true,
  "scripts": {
    "start": "vite",
    "build": "npm run ts:check & vite build",
    "ts:check": "tsc --noEmit",
    "ts:check:watch": "tsc --noEmit --watch",
    "test": "jest --silent",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@vcr/domain": "0.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rxjs": "^6.6.7",
    "tinykeys": "^1.1.2",
    "wouter": "^2.7.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@types/jest": "^26.0.22",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@vitejs/plugin-react-refresh": "^1.3.2",
    "jest": "^26.6.3",
    "sass": "1.32.8",
    "ts-jest": "^26.5.4",
    "typescript": "~4.2.4",
    "vite": "^2.1.5"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/jest-setup.ts"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleNameMapper": {
      "\\.(css|scss)$": "<rootDir>/src/__mocks__/style.mock.ts"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
