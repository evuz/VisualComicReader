{
  "name": "visual_comic_reader",
  "version": "0.1.0",
  "description": "Read comics in differents platforms but the same way",
  "main": "dist/electron/main.js",
  "author": {
    "name": "Jesús Gómez Bellido",
    "email": "jesusjgb45@gmail.com"
  },
  "dependencies": {
    "extract-zip": "^1.6.0",
    "i": "^0.3.5",
    "node-unrar": "^0.1.5",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-icons": "^2.2.3",
    "react-redux": "^5.0.3",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babili-webpack-plugin": "^0.1.1",
    "cfonts": "^1.1.3",
    "chalk": "^1.1.3",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.4",
    "del": "^3.0.0",
    "devtron": "^1.4.0",
    "electron": "^1.6.2",
    "electron-builder": "^19.5.1",
    "electron-debug": "^1.1.0",
    "electron-devtools-installer": "^2.2.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.0.1",
    "html-webpack-plugin": "^2.28.0",
    "multispinner": "^0.2.1",
    "node-sass": "^4.5.1",
    "npm-run-all": "^4.0.2",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.18.2",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.5.0",
    "webpack-hot-middleware": "^2.18.0"
  },
  "scripts": {
    "build": "node .build_scripts/build.js && build",
    "build:clean": "cross-env BUILD_TARGET=clean node .build_scripts/build.js",
    "dev": "node .build_scripts/dev.js",
    "lint": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter src test",
    "lint:fix": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter --fix src test",
    "pack": "npm run pack:main && npm run pack:renderer",
    "pack:main": "cross-env NODE_ENV=production webpack --progress --colors --config .build_scripts/webpack.main.config.js",
    "pack:renderer": "cross-env NODE_ENV=production webpack --progress --colors --config .build_scripts/webpack.renderer.config.js"
  },
  "build": {
    "appId": "org.evuz.visualReader",
    "asar": true,
    "productName": "Visual Comic Reader",
    "icon": "icons/icon.icns",
    "mac": {
      "category": "public.app-category.entertainment",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "backgroundColor": "#cdcdcd"
    },
    "linux": {
      "category": "Utility",
      "description": "Read comics in differents platforms but the same way",
      "packageCategory": "Utility",
      "target": [
        "deb",
        "rpm",
        "zip"
      ]
    },
    "win": {
      "icon": "icons/icon.ico",
      "target": [
        "zip",
        "nsis"
      ]
    },
    "files": [
      "node_modules",
      "dist"
    ],
    "directories": {
      "output": "./builds"
    }
  },
  "keywords": [],
  "license": "ISC"
}
